{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    // "module": "es2015",
    // "module": "amd",
    "module": "commonjs",
    "target": "es2015",
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    // "module": "commonjs",
    // "outFile": "./dist/index.js",
    "lib": ["es2015", "dom"]
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/app.ts", "src/index.html"]
}
